{
    "name": "umbrellio/coverspector",
    "description": "This package helps to check that code coverage above minimum value. It can be useful in CI or git hooks.",
    "type": "library",
    "authors": [
        {
            "name": "Zlob",
            "email": "zloblin@umbrellio.biz"
        }
    ],
    "autoload": {
        "psr-4": {
            "Coverspector\\": "src/"
        }
    },
    "bin": ["bin/coverspector"],
    "license": "MIT",
    "require": {
        "php": "^7.2|^7.3|^7.4|^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.4|^9.0",
        "php-coveralls/php-coveralls": "^2.1",
        "umbrellio/code-style-php": "^1.0"
    },
    "scripts": {
        "lint": "ecs check --config=ecs.yml .",
        "lint-fix": "ecs check --config=ecs.yml . --fix"
    }
}
